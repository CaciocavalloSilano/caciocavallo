<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Caciocavallo-IDE">
    <property file="nbproject/nbjdk.properties"/>
    <property location="${netbeans.user}/build.properties" name="user.properties.file"/>
    <property file="${user.properties.file}"/>
    <import file="jdk.xml"/>
    <property name="root" value="../.."/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#debugj2se) -->
    <target depends="-jdk-init" name="debug-nb">
        <path id="cp">
            <pathelement location="${root}/demo/dist/testAWT.jar"/>
            <pathelement location="${root}/demo/dist/lib/AbsoluteLayout.jar"/>
            <pathelement location="${root}/build/shared/classes"/>
            <pathelement location="${root}/build/x11/classes"/>
            <pathelement location="${root}/build/test/classes"/>
        </path>
        <nbjpdastart addressproperty="jpda.address" name="Caciocavallo" transport="dt_socket">
            <classpath refid="cp"/>
        </nbjpdastart>
        <!-- TODO configure the main class for your project here: -->
        <java classname="cacio.fluff.TestAWT" fork="true">
            <classpath refid="cp"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
            <sysproperty key="awt.toolkit" value="sun.awt.peer.x11.X11Toolkit"/>
            <sysproperty key="java.awt.graphicsenv" value="sun.awt.peer.x11.X11GraphicsEnvironment"/>
            <sysproperty key="java.library.path" value="${root}/build/x11/lib"/>
        </java>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target depends="-jdk-init" name="run-selected-file-in-tests">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath refid="cp"/>
            <sysproperty key="awt.toolkit" value="sun.awt.peer.x11.X11Toolkit"/>
            <sysproperty key="java.awt.graphicsenv" value="sun.awt.peer.x11.X11GraphicsEnvironment"/>
            <sysproperty key="java.library.path" value="${root}/build/x11/lib"/>
        </java>
    </target>
</project>
